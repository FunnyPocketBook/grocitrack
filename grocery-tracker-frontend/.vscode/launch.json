  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev",
      ],
      "type": "node",
      "serverReadyAction": {
        "action": "debugWithEdge",
        "pattern": "localhost:.*m([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "webRoot": "${workspaceFolder}"
      }
    },
  ],
}